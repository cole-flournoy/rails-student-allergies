<h2>Signup</h2>
<p style="color:red;">
  <% unless @user.errors.empty? %>
    <% @user.errors.full_messages.each do |m| %>
      <%= m %><br>
    <% end %>
  <% end %>
</p>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %><br>
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <%= f.submit %>
<% end %>