<h2>New Student</h2>
<%= params %>

<% if @classroom %>
  <h4><%= "Period #{@classroom.period} #{@classroom.subject} with #{@classroom.teacher}" %></h4>
  <%= form_for @student do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %><br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br>
    <%= f.label :grade %>
    <%= f.number_field :grade %><br>
    <%= f.label :lunch_period %>
    <%= f.text_field :lunch_period %><br><br>
    <%= f.label "Number of allergies" %>
    <%= f.number_field :alergy_count, in: 0..5, value: 0 %><br>

    <%= f.hidden_field :classrooms, value: @classroom.id %><br>
    <%= f.submit %>
  <% end %>
<% else %>
  <%= form_for @student do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %><br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %><br>
    <%= f.label :grade %>
    <%= f.number_field :grade %><br>
    <%= f.label :lunch_period %>
    <%= f.text_field :lunch_period %><br><br>
    <%= f.label "Number of allergies" %>
    <%= f.number_field :allergy_count, in: 0..5, value: 0 %><br>
    <br>
    <%= f.submit %>
  <% end %>
<% end %>
  